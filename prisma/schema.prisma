generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  password String
  firstname String
  dateOfBirth String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  lastname String
  referral String
  country String
  phone_number String
  username String
  secret_code Int
}
